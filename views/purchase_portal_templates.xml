<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="portal_my_purchase" name="My Purchase Orders">
            <t t-call="portal.portal_layout">
                <t t-set="breadcrumbs_searchbar" t-value="True"/>
                <div id="wrap" class="oe_structure">
                    <ol class="o_portal_submenu breadcrumb mb-0 flex-grow-1 px-0">
                        <li class="breadcrumb-item ms-1"><a href="/my/home" aria-label="Home" title="Home"><i class="fa fa-home"/></a></li>
                        <li class="breadcrumb-item active">Purchase Orders</li>
                    </ol>
                    <div class="container">
                        <h1 class="mb-3">My Purchase Orders</h1>

                        <div class="row content-group">
                            <div class="col-lg-3 col-md-6 mb-4">
                                <a t-att-href="url_for('/my/purchase') + (('?' + keep_query(filterby='rfq', search=search, search_in=search_in, sortby=sortby)) if keep_query(filterby='rfq', search=search, search_in=search_in, sortby=sortby) else '?filterby=rfq')" class="text-decoration-none">
                                    <div t-attf-class="card border-primary shadow h-100 py-2 #{'border-info' if filterby == 'rfq' else ''}">
                                        <div class="card-body">
                                            <div class="row no-gutters align-items-center">
                                                <div class="col mr-2">
                                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">RFQs</div>
                                                    <div class="h5 mb-0 font-weight-bold text-gray-800" t-esc="rfq_count"/>
                                                </div>
                                                <div class="col-auto">
                                                    <i class="fa fa-file-text-o fa-2x text-gray-300"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>

                            <div class="col-lg-3 col-md-6 mb-4">
                                <a t-att-href="url_for('/my/purchase') + (('?' + keep_query(filterby='sent', search=search, search_in=search_in, sortby=sortby)) if keep_query(filterby='sent', search=search, search_in=search_in, sortby=sortby) else '?filterby=sent')" class="text-decoration-none">
                                    <div t-attf-class="card border-info shadow h-100 py-2 #{'border-info' if filterby == 'sent' else ''}">
                                        <div class="card-body">
                                            <div class="row no-gutters align-items-center">
                                                <div class="col mr-2">
                                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Quotes Sent</div>
                                                    <div class="h5 mb-0 font-weight-bold text-gray-800" t-esc="quotes_sent_count"/>
                                                </div>
                                                <div class="col-auto">
                                                    <i class="fa fa-paper-plane-o fa-2x text-gray-300"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>

                            <div class="col-lg-3 col-md-6 mb-4">
                                <a t-att-href="url_for('/my/purchase') + (('?' + keep_query(filterby='confirmed', search=search, search_in=search_in, sortby=sortby)) if keep_query(filterby='confirmed', search=search, search_in=search_in, sortby=sortby) else '?filterby=confirmed')" class="text-decoration-none">
                                    <div t-attf-class="card border-success shadow h-100 py-2 #{'border-info' if filterby == 'confirmed' else ''}">
                                        <div class="card-body">
                                            <div class="row no-gutters align-items-center">
                                                <div class="col mr-2">
                                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Confirmed Orders</div>
                                                    <div class="h5 mb-0 font-weight-bold text-gray-800" t-esc="confirmed_orders_count"/>
                                                </div>
                                                <div class="col-auto">
                                                    <i class="fa fa-check-circle-o fa-2x text-gray-300"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>

                            <div class="col-lg-3 col-md-6 mb-4">
                                <a t-att-href="url_for('/my/purchase') + (('?' + keep_query(filterby='cancelled', search=search, search_in=search_in, sortby=sortby)) if keep_query(filterby='cancelled', search=search, search_in=search_in, sortby=sortby) else '?filterby=cancelled')" class="text-decoration-none">
                                    <div t-attf-class="card border-danger shadow h-100 py-2 #{'border-info' if filterby == 'cancelled' else ''}">
                                        <div class="card-body">
                                            <div class="row no-gutters align-items-center">
                                                <div class="col mr-2">
                                                    <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Cancelled Orders</div>
                                                    <div class="h5 mb-0 font-weight-bold text-gray-800" t-esc="cancelled_orders_count"/>
                                                </div>
                                                <div class="col-auto">
                                                    <i class="fa fa-times-circle-o fa-2x text-gray-300"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>


                        <div t-if="purchase_orders" class="panel panel-default">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h3 class="panel-title">Purchase Orders</h3>
                                    </div>
                                    <div class="col-md-6 text-right">
                                        <div class="o_portal_searchbar">
                                            <form class="o_portal_searchbar_form d-flex" method="get" action="/my/purchase">
                                                <div class="input-group me-2">
                                                    <input type="text" class="form-control" name="search" t-att-value="search" placeholder="Search..."/>
                                                    <select class="form-control flex-grow-0 w-auto" name="search_in" t-att-value="search_in">
                                                        <option value="content">Reference</option>
                                                        <option value="partner">Vendor</option>
                                                        <option value="product">Product</option>
                                                    </select>
                                                    <button type="submit" class="btn btn-primary"><i class="fa fa-search"/></button>
                                                </div>


                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th>Reference</th>
                                            <th>Vendor</th>
                                            <th>Order Date</th>
                                            <th>Total</th>
                                            <th>Status</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="purchase_orders" t-as="po">
                                            <tr>
                                                <td><a t-attf-href="/my/purchase/#{po.id}"><t t-esc="po.name"/></a></td>
                                                <td><t t-esc="po.partner_id.name"/></td>
                                                <td><t t-esc="po.date_order"/></td>
                                                <td><t t-esc="po.amount_total" t-options='{"widget": "monetary", "display_currency": po.currency_id}'/></td>
                                                <td><span t-field="po.state"/></td>
                                                <td><a t-attf-href="/my/purchase/#{po.id}" class="btn btn-primary btn-sm">View</a></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                            <div t-if="pager" class="o_portal_pager text-center">
                                <t t-call="portal.pager"/>
                            </div>
                        </div>
                        <t t-else="">
                            <div class="alert alert-info mt-3" role="alert">
                                No purchase orders found.
                            </div>
                        </t>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>