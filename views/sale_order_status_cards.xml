<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="sale_order_status_cards" name="Sales Order Status Cards">
            <div class="container mt-4">
                <div class="row">
                    <div class="col-lg-3 col-md-6 mb-4">
                        <a href="/my/orders?filterby=quotation" class="text-decoration-none">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body text-center d-flex flex-column justify-content-center align-items-center">
                                    <i class="fa fa-file-text-o fa-3x text-secondary mb-3"></i>
                                    <h5 class="card-title text-uppercase text-muted mb-0">Quotes</h5>
                                    <p class="card-text fs-2 fw-bold text-dark" t-esc="quote_count"/>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-4">
                        <a href="/my/orders?filterby=sent" class="text-decoration-none">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body text-center d-flex flex-column justify-content-center align-items-center">
                                    <i class="fa fa-paper-plane-o fa-3x text-primary mb-3"></i>
                                    <h5 class="card-title text-uppercase text-muted mb-0">Quotes Sent</h5>
                                    <p class="card-text fs-2 fw-bold text-dark" t-esc="quote_sent_count"/>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-4">
                        <a href="/my/orders?filterby=sale" class="text-decoration-none">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body text-center d-flex flex-column justify-content-center align-items-center">
                                    <i class="fa fa-check-circle-o fa-3x text-success mb-3"></i>
                                    <h5 class="card-title text-uppercase text-muted mb-0">Confirmed Orders</h5>
                                    <p class="card-text fs-2 fw-bold text-dark" t-esc="confirmed_orders_count"/>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-4">
                        <a href="/my/orders?filterby=cancel" class="text-decoration-none">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body text-center d-flex flex-column justify-content-center align-items-center">
                                    <i class="fa fa-times-circle-o fa-3x text-danger mb-3"></i>
                                    <h5 class="card-title text-uppercase text-muted mb-0">Cancelled Orders</h5>
                                    <p class="card-text fs-2 fw-bold text-dark" t-esc="cancelled_orders_count"/>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </template>
    </data>
</odoo>