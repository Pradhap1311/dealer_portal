<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="dealer_dashboard" name="Dealer Dashboard" customize_show="True">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <div class="alert alert-info" role="alert">
                Welcome to your Dealer Dashboard.
                <a href="/my/home" class="alert-link fw-bold">Back to Portal Home</a>
            </div>

            <div id="wrap" class="oe_structure">
                <div class="container">
                    <h1 class="mb-3">Dealer Dashboard</h1>
                    <div class="row content-group">
                        <!-- Total Orders Placed -->
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Orders Placed</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800" t-esc="total_orders"/>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fa fa-shopping-cart fa-2x text-gray-300"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Orders in Production -->
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Orders in Production</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800" t-esc="orders_in_production"/>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fa fa-industry fa-2x text-gray-300"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Pending Deliveries -->
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-warning shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Pending Deliveries</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800" t-esc="pending_deliveries_count"/>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fa fa-hourglass-half fa-2x text-gray-300"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Delivered Orders -->
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-info shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Delivered Orders</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800" t-esc="delivered_orders_count"/>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fa fa-truck fa-2x text-gray-300"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Cancelled Deliveries -->
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-danger shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Cancelled Deliveries</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800" t-esc="cancelled_deliveries_count"/>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fa fa-times-circle fa-2x text-gray-300"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Receipts -->
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Receipts</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800" t-esc="receipt_count"/>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fa fa-truck fa-2x text-gray-300"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Vendor Bills (Draft) -->
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-info shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Draft Vendor Bills</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800" t-esc="vendor_bill_draft_count"/>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fa fa-file-text-o fa-2x text-gray-300"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Vendor Bills (Posted) -->
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Posted Vendor Bills</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800" t-esc="vendor_bill_posted_count"/>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fa fa-file-text-o fa-2x text-gray-300"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Vendor Bills (Paid) -->
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Paid Vendor Bills</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800" t-esc="vendor_bill_paid_count"/>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fa fa-file-text-o fa-2x text-gray-300"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Vendor Bills (Cancelled) -->
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-danger shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Cancelled Vendor Bills</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800" t-esc="vendor_bill_cancelled_count"/>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fa fa-file-text-o fa-2x text-gray-300"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Opportunities -->
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Opportunities</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800" t-esc="opportunity_count"/>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fa fa-lightbulb-o fa-2x text-gray-300"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Documents -->
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-info shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Documents</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800" t-esc="document_count"/>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fa fa-file-o fa-2x text-gray-300"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Purchase RFQ -->
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-warning shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Purchase RFQ</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800" t-esc="purchase_rfq_count"/>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fa fa-file-text-o fa-2x text-gray-300"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Purchase Quotes Sent -->
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-info shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Purchase Quotes Sent</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800" t-esc="purchase_quotes_sent_count"/>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fa fa-envelope-o fa-2x text-gray-300"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Purchase Confirmed Orders -->
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Purchase Confirmed Orders</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800" t-esc="purchase_confirmed_orders_count"/>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fa fa-check-square-o fa-2x text-gray-300"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Purchase Cancelled Orders -->
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-danger shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Purchase Cancelled Orders</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800" t-esc="purchase_cancelled_orders_count"/>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fa fa-times-circle-o fa-2x text-gray-300"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- User Count (Admin Only) -->
                        <t t-if="user_id and user_id.has_group('base.group_system')">
                            <div class="col-lg-3 col-md-6 mb-4">
                                <div class="card border-primary shadow h-100 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Users</div>
                                                <div class="h5 mb-0 font-weight-bold text-gray-800" t-esc="user_count"/>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fa fa-users fa-2x text-gray-300"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>

                    <!-- You can add more sections here, e.g., recent orders, production status, etc. -->

                </div>
            </div>
        </t>
    </template>
</odoo>