<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template for listing Payments -->
    <template id="portal_my_payments" name="My Payments" customize_show="True">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_back_in_edit_mode">
                <t t-raw="0"/>
            </t>

            <div id="wrap" class="oe_structure o_portal_my_home">
                <div class="container">
                    <h1 class="mb-3">My Payments</h1>

                    <t t-if="not account_payments">
                        <p>There are no payments to display.</p>
                    </t>
                    <t t-if="account_payments">
                        <div class="table-responsive">
                            <table class="table table-hover o_portal_my_payments_table">
                                <thead>
                                    <tr class="active">
                                        <th>Reference</th>
                                        <th>Payment Date</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th class="text-end"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="account_payments" t-as="payment">
                                        <tr>
                                            <td><a t-attf-href="/my/payments/#{payment.id}"><t t-esc="payment.name"/></a></td>
                                            <td><t t-esc="payment.date"/></td>
                                            <td><t t-esc="payment.amount"/> <t t-esc="payment.currency_id.symbol"/></td>
                                            <td><t t-esc="payment.state"/></td>
                                            <td class="text-end">
                                                <a t-attf-href="/my/payments/#{payment.id}" class="btn btn-primary btn-sm">View</a>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>

    <!-- Template for Payment Detail Page -->
    <template id="portal_my_payment_detail" name="Payment Detail" customize_show="True">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_back_in_edit_mode">
                <t t-raw="0"/>
            </t>

            <div id="wrap" class="oe_structure">
                <div class="container">
                    <h1 class="mb-3">Payment: <span t-field="account_payment.name"/></h1>

                    <div class="row">
                        <div class="col-lg-8">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h5 class="mb-0">Details</h5>
                                </div>
                                <div class="card-body">
                                    <p><strong>Reference:</strong> <span t-field="account_payment.name"/></p>
                                    <p><strong>Payment Date:</strong> <span t-field="account_payment.date"/></p>
                                    <p><strong>Amount:</strong> <span t-field="account_payment.amount"/> <span t-field="account_payment.currency_id.symbol"/></p>
                                    <p><strong>Status:</strong> <span t-field="account_payment.state"/></p>
                                    <p><strong>Payment Method:</strong> <span t-field="account_payment.journal_id.name"/></p>
                                    <p><strong>Memo:</strong> <span t-field="account_payment.ref"/></p>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <!-- Sidebar content if needed -->
                        </div>
                    </div>

                    <div class="mt-4">
                        <a href="/my/payments" class="btn btn-secondary">Back to Payments</a>
                    </div>

                </div>
            </div>
        </t>
    </template>

    <template id="portal_my_payments_add_spinner" name="Portal My Payments Add Spinner" inherit_id="dealer_portal.portal_my_payments" priority="1">
        <xpath expr="//div[@id='wrap']/div[@class='container']/h1" position="before">
            <div class="o_portal_doc_spinner spinner-border text-o-color-2 align-self-center mt-5"/>
        </xpath>
    </template>
</odoo>