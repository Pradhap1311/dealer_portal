<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template for listing Delivery Orders -->
    <template id="portal_my_stock_pickings" name="My Delivery Orders" customize_show="True">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_back_in_edit_mode">
                <t t-raw="0"/>
            </t>

            <div id="wrap" class="oe_structure o_portal_my_home">
                <div class="container">
                    <h1 class="mb-3">My Delivery Orders</h1>

                    <t t-if="not stock_pickings">
                        <p>There are no delivery orders to display.</p>
                    </t>
                    <t t-if="stock_pickings">
                        <div class="table-responsive">
                            <table class="table table-hover o_portal_my_stock_pickings_table">
                                <thead>
                                    <tr class="active">
                                        <th>Reference</th>
                                        <th>Scheduled Date</th>
                                        <th>Status</th>
                                        <th>Tracking Reference</th>
                                        <th class="text-end"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="stock_pickings" t-as="picking">
                                        <tr>
                                            <td><a t-attf-href="/my/delivery/#{picking.id}"><t t-esc="picking.name"/></a></td>
                                            <td><t t-esc="picking.scheduled_date"/></td>
                                            <td><t t-esc="picking.state"/></td>
                                            <td><t t-esc="picking.carrier_tracking_ref or 'N/A'"/></td>
                                            <td class="text-end">
                                                <a t-attf-href="/my/delivery/#{picking.id}" class="btn btn-primary btn-sm">View</a>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>

    <!-- Template for Delivery Order Detail Page -->
    <template id="portal_my_stock_picking_detail" name="Delivery Order Detail" customize_show="True">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_back_in_edit_mode">
                <t t-raw="0"/>
            </t>

            <div id="wrap" class="oe_structure">
                <div class="container">
                    <h1 class="mb-3">Delivery Order: <span t-field="stock_picking.name"/></h1>

                    <div class="row">
                        <div class="col-lg-8">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h5 class="mb-0">Details</h5>
                                </div>
                                <div class="card-body">
                                    <p><strong>Reference:</strong> <span t-field="stock_picking.name"/></p>
                                    <p><strong>Scheduled Date:</strong> <span t-field="stock_picking.scheduled_date"/></p>
                                    <p><strong>Status:</strong> <span t-field="stock_picking.state"/></p>
                                    <p><strong>Delivery Lead Time:</strong> <span t-field="stock_picking.delivery_lead_time"/> days</p>
                                    <p><strong>Tracking Reference:</strong> <span t-field="stock_picking.carrier_tracking_ref"/></p>
                                    <p><strong>Origin:</strong> <span t-field="stock_picking.origin"/></p>
                                </div>
                            </div>

                            <div class="card mb-4">
                                <div class="card-header">
                                    <h5 class="mb-0">Operations</h5>
                                </div>
                                <div class="card-body">
                                    <t t-if="not stock_picking.move_ids_without_package">
                                        <p>No operations for this delivery order.</p>
                                    </t>
                                    <t t-if="stock_picking.move_ids_without_package">
                                        <table class="table table-sm table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Product</th>
                                                    <th>Quantity</th>
                                                    <th>State</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="stock_picking.move_ids_without_package" t-as="move">
                                                    <tr>
                                                        <td><t t-esc="move.product_id.display_name"/></td>
                                                        <td><t t-esc="move.product_uom_qty"/> <t t-esc="move.product_uom.name"/></td>
                                                        <td><t t-esc="move.state"/></td>
                                                    </tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </t>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <!-- Sidebar content if needed -->
                        </div>
                    </div>

                    <div class="mt-4">
                        <a href="/my/delivery" class="btn btn-secondary">Back to Delivery Orders</a>
                    </div>

                </div>
            </div>
        </t>
    </template>

    <template id="portal_my_stock_pickings_add_spinner" name="Portal My Delivery Orders Add Spinner" inherit_id="dealer_portal.portal_my_stock_pickings" priority="1">
        <xpath expr="//div[@id='wrap']/div[@class='container']/h1" position="before">
            <div class="o_portal_doc_spinner spinner-border text-o-color-2 align-self-center mt-5"/>
        </xpath>
    </template>
</odoo>