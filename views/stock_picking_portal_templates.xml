<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="portal_my_delivery_orders" name="My Delivery Orders">
            <t t-call="portal.portal_layout">
                <t t-set="breadcrumbs_searchbar" t-value="True"/>
                <div id="wrap" class="oe_structure">
                    <ol class="o_portal_submenu breadcrumb mb-0 flex-grow-1 px-0">
                        <li class="breadcrumb-item ms-1"><a href="/my/home" aria-label="Home" title="Home"><i class="fa fa-home"/></a></li>
                        <li class="breadcrumb-item active">Delivery Orders</li>
                    </ol>
                    <div class="container">
                        <t t-call="dealer_portal.delivery_status_cards"/>

                        <div t-if="filterby" class="mt-4">
                            <h3 class="mb-3" t-esc="current_filter_name"/>
                            <div t-if="delivery_orders" class="table-responsive">
                                <table class="table table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th>Reference</th>
                                            <th>Partner</th>
                                            <th>Scheduled Date</th>
                                            <th>Status</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="delivery_orders" t-as="do">
                                            <tr>
                                                <td><a t-attf-href="/my/delivery/#{do.id}"><t t-esc="do.name"/></a></td>
                                                <td><t t-esc="do.partner_id.display_name"/></td>
                                                <td><span t-field="do.scheduled_date"/></td>
                                                <td><span t-field="do.state"/></td>
                                                <td><a t-attf-href="/my/delivery/#{do.id}" class="btn btn-primary btn-sm">View</a></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                            <div t-else="" class="alert alert-info mt-3" role="alert">
                                No delivery orders found for this status.
                            </div>
                            <div t-if="pager" class="o_portal_pager text-center">
                                <t t-call="portal.pager"/>
                            </div>
                        </div>
                        <div t-else="" class="alert alert-info mt-3" role="alert">
                            Select a status card above to view delivery orders.
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="portal_my_delivery_order_page" name="My Delivery Order Page">
            <t t-call="portal.portal_layout">
                <div id="wrap" class="oe_structure">
                    <div class="o_portal_return_sidebar mb-3">
                        <a href="/my/delivery" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Back to Delivery Orders</a>
                    </div>
                    <div class="container">
                        <div class="row mt-4">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="mb-0">Delivery Order Details</h5>
                                    </div>
                                    <div class="card-body">
                                        <p><strong>Reference:</strong> <span t-field="delivery_order.name"/></p>
                                        <p><strong>Partner:</strong> <span t-field="delivery_order.partner_id.display_name"/></p>
                                        <p><strong>Scheduled Date:</strong> <span t-field="delivery_order.scheduled_date"/></p>
                                        <p><strong>Status:</strong> <span t-field="delivery_order.state"/></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

    </data>
</odoo>