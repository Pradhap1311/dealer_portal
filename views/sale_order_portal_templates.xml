<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_my_sales_orders" name="My Sales Orders">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <div id="wrap" class="oe_structure">
                <ol class="o_portal_submenu breadcrumb mb-0 flex-grow-1 px-0">
                    <li class="breadcrumb-item ms-1">
                        <a href="/my/home" aria-label="Home" title="Home"><i class="fa fa-home"/></a>
                    </li>
                    <li class="breadcrumb-item active">Sales Orders</li>
                </ol>
                <div class="container">
                    <t t-call="dealer_portal.sale_order_status_cards"/>

                    <div class="mt-4">
                        <h3 class="mb-3" t-esc="current_filter_name"/>
                        <div t-if="orders" class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>Reference</th>
                                        <th>Date</th>
                                        <th>Customer</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th>Expected Delivery</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="orders" t-as="order">
                                        <tr>
                                            <td>
                                                <a t-attf-href="/my/orders/#{order.id}">
                                                    <t t-esc="order.name"/>
                                                </a>
                                            </td>
                                            <td><span t-field="order.date_order"/></td>
                                            <td><span t-field="order.partner_id.name"/></td>
                                            <td>
                                                <span t-field="order.amount_total"
                                                      t-options='{"widget": "monetary", "display_currency": order.currency_id}'/>
                                            </td>
                                            <td><span t-field="order.state"/></td>
                                            <td><span t-field="order.expected_delivery_date"/></td>
                                            <td>
                                                <a t-attf-href="/my/orders/#{order.id}" class="btn btn-primary btn-sm">View</a>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>

                        <div t-if="pager" class="o_portal_pager text-center">
                            <t t-call="portal.pager"/>
                        </div>
                    </div> <!-- closes mt-4 -->
                </div> <!-- closes container -->
            </div> <!-- closes wrap -->
        </t> <!-- closes portal.portal_layout -->
    </template>
</odoo>
