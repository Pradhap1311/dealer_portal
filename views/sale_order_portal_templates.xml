<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_my_sales_orders" name="My Sales Orders">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <div id="wrap" class="oe_structure">
                <ol class="o_portal_submenu breadcrumb mb-0 flex-grow-1 px-0">
                    <li class="breadcrumb-item ms-1">
                        <a href="/my/home" aria-label="Home" title="Home"><i class="fa fa-home"/></a>
                    </li>
                    <li class="breadcrumb-item active">Sales Orders</li>
                </ol>
                <div class="container">
                    <t t-call="dealer_portal.sale_order_status_cards"/>

                    <div class="mt-4">
                        <div class="o_portal_searchbar">
                            <form class="o_portal_searchbar_form d-flex" method="get" action="/my/orders">
                                <div class="input-group me-2">
                                    <input type="text" class="form-control" name="search" t-att-value="search" placeholder="Search..."/>
                                    <select class="form-control flex-grow-0 w-auto" name="search_in" t-att-value="search_in">
                                        <option value="content">Reference</option>
                                        <option value="customer">Customer</option>
                                    </select>
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-search"/></button>
                                </div>
                                <div class="dropdown">
                                    <a class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown" href="#">
                                        <span class="fa fa-sort-amount-asc"/>
                                        <span class="d-none d-md-inline">Sort by:</span>
                                        <t t-esc="searchbar_sortings[sortby]['label']"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <t t-foreach="searchbar_sortings" t-as="sort_id">
                                            <a role="menuitem" class="dropdown-item" t-att-href="url_for('/my/orders') + (('?' + keep_query(search=search, search_in=search_in, filterby=filterby, sortby=sort_id)) if keep_query(search=search, search_in=search_in, filterby=filterby, sortby=sort_id) else '')">
                                                <t t-esc="searchbar_sortings[sort_id]['label']"/>
                                            </a>
                                        </t>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <h3 class="mb-3" t-esc="current_filter_name"/>
                        <div t-if="orders" class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>Reference</th>
                                        <th>Date</th>
                                        <th>Customer</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th>Expected Delivery</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="orders" t-as="order">
                                        <tr>
                                            <td>
                                                <a t-attf-href="/my/orders/#{order.id}">
                                                    <t t-esc="order.name"/>
                                                </a>
                                            </td>
                                            <td><span t-field="order.date_order"/></td>
                                            <td><span t-field="order.partner_id.name"/></td>
                                            <td>
                                                <span t-field="order.amount_total"
                                                      t-options='{"widget": "monetary", "display_currency": order.currency_id}'/>
                                            </td>
                                            <td><span t-field="order.state"/></td>
                                            <td><span t-field="order.expected_delivery_date"/></td>
                                            <td>
                                                <a t-attf-href="/my/orders/#{order.id}" class="btn btn-primary btn-sm">View</a>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>

                        <div t-if="pager" class="o_portal_pager text-center">
                            <t t-call="portal.pager"/>
                        </div>
                    </div> <!-- closes mt-4 -->
                </div> <!-- closes container -->
            </div> <!-- closes wrap -->
        </t> <!-- closes portal.portal_layout -->
    </template>
</odoo>
