<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_my_payments" name="My Payments">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <div id="wrap" class="oe_structure">
                <ol class="o_portal_submenu breadcrumb mb-0 flex-grow-1 px-0">
                    <li class="breadcrumb-item ms-1"><a href="/my/home" aria-label="Home" title="Home"><i class="fa fa-home"/></a></li>
                    <li class="breadcrumb-item active">My Payments</li>
                </ol>
                <div class="container">
                    <t t-call="dealer_portal.payment_status_cards"/>

                    <div class="mt-4">
                        <div class="o_portal_searchbar">
                            <form class="o_portal_searchbar_form d-flex" method="get" action="/my/payments">
                                <div class="input-group me-2">
                                    <input type="text" class="form-control" name="search" t-att-value="search" placeholder="Search..."/>
                                    <select class="form-control flex-grow-0 w-auto" name="search_in" t-att-value="search_in">
                                        <option value="content">Reference</option>
                                        <option value="customer">Customer</option>
                                    </select>
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-search"/></button>
                                    <a t-attf-href="/my/payments?clear_filter=True" class="btn btn-secondary ms-2">Clear Filter</a>
                                </div>
                                <div class="dropdown">
                                    <a class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown" href="#">
                                        <span class="fa fa-sort-amount-asc"/>
                                        <span class="d-none d-md-inline">Sort by:</span>
                                        <t t-esc="searchbar_sortings[sortby]['label']"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <t t-foreach="searchbar_sortings" t-as="sort_id">
                                            <a role="menuitem" class="dropdown-item" t-att-href="url_for('/my/payments') + (('?' + keep_query(search=search, search_in=search_in, filterby=filterby, sortby=sort_id)) if keep_query(search=search, search_in=search_in, filterby=filterby, sortby=sort_id) else '')">
                                                <t t-esc="searchbar_sortings[sort_id]['label']"/>
                                            </a>
                                        </t>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <h3 class="mb-3" t-esc="current_filter_name"/>
                        <div t-if="invoices" class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>Reference</th>
                                        <th>Date</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="invoices" t-as="invoice">
                                        <tr>
                                            <td><a t-attf-href="/my/payments/#{invoice.id}"><t t-esc="invoice.name"/></a></td>
                                            <td><span t-field="invoice.invoice_date"/></td>
                                            <td><span t-field="invoice.amount_total" t-options='{"widget": "monetary", "display_currency": invoice.currency_id}'/></td>
                                            <td><span t-field="invoice.payment_state"/></td>
                                            <td><a t-attf-href="/my/payments/#{invoice.id}" class="btn btn-primary btn-sm">View</a></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                        <div t-else="" class="alert alert-info mt-3" role="alert">
                            No payments found.
                        </div>
                        <div t-if="pager" class="o_portal_pager text-center">
                            <t t-call="portal.pager"/>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_my_payment_page" name="My Invoice Page">
        <t t-call="portal.portal_layout">
            <div id="wrap" class="oe_structure">
                <div class="o_portal_return_sidebar mb-3">
                    <a href="/my/payments" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Back to Invoices</a>
                </div>
                <div class="container">
                    <div class="row mt-4">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0">Invoice Details</h5>
                                </div>
                                <div class="card-body">
                                    <p><strong>Reference:</strong> <span t-field="invoice.name"/></p>
                                    <p><strong>Customer:</strong> <span t-field="invoice.partner_id.display_name"/></p>
                                    <p><strong>Invoice Date:</strong> <span t-field="invoice.invoice_date"/></p>
                                    <p><strong>Due Date:</strong> <span t-field="invoice.invoice_date_due"/></p>
                                    <p><strong>Total Amount:</strong> <span t-field="invoice.amount_total" t-options='{"widget": "monetary", "display_currency": invoice.currency_id}'/></p>
                                    <p><strong>Amount Due:</strong> <span t-field="invoice.amount_residual" t-options='{"widget": "monetary", "display_currency": invoice.currency_id}'/></p>
                                    <p><strong>Status:</strong> <span t-field="invoice.payment_state"/></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>