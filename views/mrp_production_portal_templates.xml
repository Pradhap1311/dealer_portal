<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="portal_my_manufacturing_orders" name="My Manufacturing Orders">
            <t t-call="portal.portal_layout">
                <t t-set="breadcrumbs_searchbar" t-value="True"/>
                <div id="wrap" class="oe_structure">
                    <ol class="o_portal_submenu breadcrumb mb-0 flex-grow-1 px-0">
                        <li class="breadcrumb-item ms-1"><a href="/my/home" aria-label="Home" title="Home"><i class="fa fa-home"/></a></li>
                        <li class="breadcrumb-item active">Manufacturing Orders</li>
                    </ol>
                    <div class="container">
                        <t t-call="dealer_portal.mrp_status_cards"/>

                        <div t-if="filterby" class="mt-4">
                            <h3 class="mb-3" t-esc="current_filter_name"/>
                            <div t-if="mrp_productions" class="table-responsive">
                                <table class="table table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th>Reference</th>
                                            <th>Product</th>
                                            <th>Quantity</th>
                                            <th>Status</th>
                                            <th>Scheduled Date</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="mrp_productions" t-as="mo">
                                            <tr>
                                                <td><a t-attf-href="/my/manufacturing/#{mo.id}"><t t-esc="mo.name"/></a></td>
                                                <td><t t-esc="mo.product_id.display_name"/></td>
                                                <td><t t-esc="mo.product_qty"/> <t t-esc="mo.product_uom_id.name"/></td>
                                                <td><span t-field="mo.state"/></td>
                                                <td><span t-field="mo.date_start"/></td>
                                                <td><a t-attf-href="/my/manufacturing/#{mo.id}" class="btn btn-primary btn-sm">View</a></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                            <div t-else="" class="alert alert-info mt-3" role="alert">
                                No manufacturing orders found for this status.
                            </div>
                            <div t-if="pager" class="o_portal_pager text-center">
                                <t t-call="portal.pager"/>
                            </div>
                        </div>
                        <div t-else="" class="alert alert-info mt-3" role="alert">
                            Select a status card above to view manufacturing orders.
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="portal_my_manufacturing_order_page" name="My Manufacturing Order Page">
            <t t-call="portal.portal_layout">
                <div id="wrap" class="oe_structure">
                    <div class="o_portal_return_sidebar mb-3">
                        <a href="/my/manufacturing" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Back to Manufacturing Orders</a>
                    </div>
                    <div class="container">
                        <div class="row mt-4">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="mb-0">Manufacturing Order Details</h5>
                                    </div>
                                    <div class="card-body">
                                        <p><strong>Reference:</strong> <span t-field="mrp_production.name"/></p>
                                        <p><strong>Product:</strong> <span t-field="mrp_production.product_id.display_name"/></p>
                                        <p><strong>Quantity:</strong> <span t-field="mrp_production.product_qty"/> <span t-field="mrp_production.product_uom_id.name"/></p>
                                        <p><strong>Status:</strong> <span t-field="mrp_production.state"/></p>
                                        <p><strong>Scheduled Date:</strong> <span t-field="mrp_production.date_start"/></p>

                                        <h6 class="mt-4">Work Orders:</h6>
                                        <t t-if="mrp_production.workorder_ids">
                                            <ul class="list-group mb-3">
                                                <t t-foreach="mrp_production.workorder_ids" t-as="workorder">
                                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                                        <div>
                                                            <strong>Work Order:</strong> <t t-esc="workorder.name"/>
                                                        </div>
                                                        <t t-if="workorder.sale_order_id">
                                                            <div>
                                                                <strong>Sales Order:</strong> <t t-esc="workorder.sale_order_id.name"/>
                                                            </div>
                                                        </t>
                                                        <span class="badge bg-primary rounded-pill"><t t-esc="workorder.state"/></span>
                                                    </li>
                                                </t>
                                            </ul>
                                        </t>
                                        <t t-else="">
                                            <p>No work orders associated.</p>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

    </data>
</odoo>