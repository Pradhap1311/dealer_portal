<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Template for listing Manufacturing Orders -->
        <template id="portal_my_mrp_productions" name="My Manufacturing Orders" customize_show="True">
            <t t-call="portal.portal_layout">
                <t t-set="breadcrumbs_searchbar" t-value="True"/>
                <div id="wrap" class="oe_structure o_portal_my_home">
                    <div class="container">
                        <ol class="breadcrumb mb-3">
                            <li class="breadcrumb-item"><a href="/my/home">Home</a></li>
                            <li class="breadcrumb-item active">Manufacturing Orders</li>
                        </ol>
                        <t t-if="not mrp_productions">
                            <p>There are no manufacturing orders to display.</p>
                        </t>
                        <t t-if="mrp_productions">
                            <div class="table-responsive">
                                <table class="table table-hover o_portal_my_mrp_productions_table">
                                    <thead>
                                        <tr class="active">
                                            <th>Reference</th>
                                            <th>Product</th>
                                            <th>Quantity</th>
                                            <th>Status</th>
                                            <th>Completion %</th>
                                            <th class="text-end"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="mrp_productions" t-as="mo">
                                            <tr>
                                                <td>
                                                    <a t-attf-href="/my/manufacturing/#{mo.id}">
                                                        <t t-esc="mo.name"/>
                                                    </a>
                                                </td>
                                                <td><t t-esc="mo.product_id.display_name"/></td>
                                                <td><t t-esc="mo.product_qty"/> <t t-esc="mo.product_uom_id.name"/></td>
                                                <td><t t-esc="mo.state"/></td>
                                                <td>
                                                    <div class="progress" style="height: 20px;">
                                                        <div class="progress-bar" role="progressbar"
                                                             t-att-style="'width: ' + str(mo.workorder_completion_percentage or 0) + '%;'"
                                                             t-att-aria-valuenow="(mo.workorder_completion_percentage or 0)"
                                                             aria-valuemin="0" aria-valuemax="100">
                                                            <t t-esc="'%.2f' % (mo.workorder_completion_percentage or 0)"/>%
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="text-end">
                                                    <a t-attf-href="/my/manufacturing/#{mo.id}" class="btn btn-primary btn-sm">View</a>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </t>
                    </div>
                </div>
            </t>
        </template>

        <!-- Template for Manufacturing Order Detail Page -->
        <template id="portal_my_mrp_production_detail" name="Manufacturing Order Detail" customize_show="True">
            <t t-call="portal.portal_layout">
                <t t-set="breadcrumbs_searchbar" t-value="True"/>

                <!-- <t t-call="portal.portal_back_in_edit_mode">
                    <t t-raw="0"/>
                </t> -->

                <div id="wrap" class="oe_structure">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-8">
                                <!-- Details Card -->
                                <div class="card mb-4">
                                    <div class="card-header">
                                        <h5 class="mb-0">Details</h5>
                                    </div>
                                    <div class="card-body">
                                        <p><strong>Reference:</strong> <span t-esc="mrp_production['name']"/></p>
                                        <p><strong>Scheduled Date:</strong> <span t-esc="mrp_production.get('date_start','-')"/></p>
                                        <p><strong>Status:</strong> <span t-esc="mrp_production['state']"/></p>
                                        <p><strong>Product:</strong> <span t-esc="mrp_production['product_id'][1]"/></p>
                                        <p><strong>Quantity:</strong> <span t-esc="mrp_production['product_qty']"/> <span t-esc="mrp_production['product_uom_id'][1]"/></p>
                                        <p><strong>Origin:</strong> <span t-esc="mrp_production.get('origin','-')"/></p>
                                    </div>
                                </div>

                                <!-- Work Order Progress Card -->
                                <div class="card mb-4">
                                    <div class="card-header">
                                        <h5 class="mb-0">Work Order Progress</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="progress" style="height: 30px;">
                                            <div class="progress-bar" role="progressbar"
                                                 t-att-style="'width: ' + str(mrp_production.get('workorder_completion_percentage',0)) + '%;'"
                                                 t-att-aria-valuenow="mrp_production.get('workorder_completion_percentage',0)"
                                                 aria-valuemin="0" aria-valuemax="100">
                                                <t t-esc="'%.2f' % mrp_production.get('workorder_completion_percentage',0)"/>%
                                            </div>
                                        </div>
                                        <p class="mt-2 text-muted">Total Work Orders: <t t-esc="len(workorders or [])"/></p>
                                    </div>
                                </div>

                                <!-- Work Orders Table -->
                                <div class="card mb-4">
                                    <div class="card-header">
                                        <h5 class="mb-0">Work Orders</h5>
                                    </div>
                                    <div class="card-body">
                                        <t t-if="not workorders">
                                            <p>No work orders for this manufacturing order.</p>
                                        </t>
                                        <t t-if="workorders">
                                            <table class="table table-sm table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>Operation</th>
                                                        <th>Work Center</th>
                                                        <th>Status</th>
                                                        <th>Duration</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <t t-foreach="workorders" t-as="workorder">
                                                        <tr>
                                                            <td><t t-esc="workorder['name']"/></td>
                                                            <td><t t-esc="workorder['workcenter_id'][1]"/></td>
                                                            <td><t t-esc="workorder['state']"/></td>
                                                            <td><t t-esc="'%.2f' % workorder['duration']"/> min</td>
                                                        </tr>
                                                    </t>
                                                </tbody>
                                            </table>
                                        </t>
                                    </div>
                                </div>

                                <!-- By-Products Table -->
                                <div class="card mb-4">
                                    <div class="card-header">
                                        <h5 class="mb-0">By-Products</h5>
                                    </div>
                                    <div class="card-body">
                                        <t t-if="not byproduct_moves">
                                            <p>No by-products for this manufacturing order.</p>
                                        </t>
                                        <t t-if="byproduct_moves">
                                            <table class="table table-sm table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>Product</th>
                                                        <th>Quantity</th>
                                                        <th>State</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <t t-foreach="byproduct_moves" t-as="move">
                                                        <tr>
                                                            <td><t t-esc="move['product_id'][1]"/></td>
                                                            <td><t t-esc="move['product_uom_qty']"/> <t t-esc="move['product_uom'][1]"/></td>
                                                            <td><t t-esc="move['state']"/></td>
                                                        </tr>
                                                    </t>
                                                </tbody>
                                            </table>
                                        </t>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <!-- Sidebar content if needed -->
                            </div>
                        </div>

                        <div class="mt-4">
                            <a href="/my/manufacturing" class="btn btn-secondary">Back to Manufacturing Orders</a>
                        </div>

                    </div>
                </div>
            </t>
        </template>

    </data>
</odoo>
