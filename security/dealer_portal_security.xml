<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Dealer Portal User Group -->
        <record id="group_dealer_portal_user" model="res.groups">
            <field name="name">Dealer Portal / User</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">The user can access the dealer portal functionalities.</field>
        </record>

        <!-- Record rules for dealer portal users -->
        <record id="sale_order_dealer_portal_rule" model="ir.rule">
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="groups" eval="[(4, ref('dealer_portal.group_dealer_portal_user')), (4, ref('base.group_system'), 16)]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="mrp_production_dealer_portal_rule" model="ir.rule">
            <field name="model_id" ref="mrp.model_mrp_production"/>
            <field name="groups" eval="[(4, ref('dealer_portal.group_dealer_portal_user')), (4, ref('base.group_system'), 16)]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="stock_picking_dealer_portal_rule" model="ir.rule">
            <field name="name">Delivery Order Dealer Portal User</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="groups" eval="[(4, ref('dealer_portal.group_dealer_portal_user')), (4, ref('base.group_system'), 16)]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="crm_lead_dealer_portal_rule" model="ir.rule">
            <field name="name">Opportunity Dealer Portal User</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="domain_force">[('partner_id', 'child_of', [user.partner_id.commercial_partner_id.id])]</field>
            <field name="groups" eval="[(4, ref('dealer_portal.group_dealer_portal_user')), (4, ref('base.group_system'), 16)]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="ir_attachment_dealer_portal_rule" model="ir.rule">
            <field name="name">Attachment Dealer Portal User</field>
            <field name="model_id" ref="base.model_ir_attachment"/>
            <field name="domain_force">['|', '&amp;', ('res_model', '=', 'res.partner'), ('res_id', '=', user.partner_id.id), '&amp;', ('res_model', 'in', ['sale.order', 'purchase.order', 'account.move', 'crm.lead', 'mrp.production', 'stock.picking']), ('res_id', 'in', user.partner_id.commercial_partner_id.child_ids.ids + [user.partner_id.commercial_partner_id.id]) ]</field>
            <field name="groups" eval="[(4, ref('dealer_portal.group_dealer_portal_user')), (4, ref('base.group_system'), 16)]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="procurement_group_dealer_portal_rule" model="ir.rule">
            <field name="name">Procurement Group Dealer Portal User</field>
            <field name="model_id" ref="stock.model_procurement_group"/>
            <field name="domain_force">[(1, '=', 1)]</field> <!-- Allow access to all procurement groups -->
            <field name="groups" eval="[(4, ref('dealer_portal.group_dealer_portal_user')), (4, ref('base.group_system'), 16)]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>